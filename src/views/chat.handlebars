<div id="container" class="chatContainer" >
    <div style="display: flex; flex-direction:row; gap: .3rem; align-items: center;">
        <a href="http://localhost:8080/products"><button>Buscar Productos</button></a>
        <button id="ViewCart">Ver Mi Carrito</button>
        <a href="http://localhost:8080/"><button>Ir al Home</button></a>
        <a href="http://localhost:8080/realtimeProducts"><button>Ir a RealTimeProducts</button></a>
        <div style="margin-left: auto;">
            {{#if user}}
                <p>{{user.role}}: {{user.first_name}} {{user.last_name}} / {{user.email}}</p>
                <button style=" float: right;" id="logout-btn">Log Out</button>
            {{else}}
                <a href="http://localhost:8080/login"><button>Log In</button></a>
                <a href="http://localhost:8080/register"><button>Register</button></a>
            {{/if}}
        </div>
    </div>
    <h1 class="chatTitle">Chat con WebSocket</h1>
    <div id="messageContainer">

    </div>
    <form id="messageForm">
        <input
            autocomplete="off" 
            type="text" 
            id="messageInput" 
            name="messageInput"
        >
        <button type="submit" value="Enviar">Enviar</button>
    </form>
</div>
<script src="js/logout.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/chat.js"></script>