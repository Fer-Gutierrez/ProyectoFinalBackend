<div>
    <div style="display: flex; flex-direction:row; align-items: center;">
         <a href="http://localhost:8080/chat"><button>Ir al Chat</button></a>
        <div style="margin-left: auto;">
            {{#if user}}
                <p>{{user.role}}: {{user.first_name}} {{user.last_name}} / {{user.email}}</p>
                <button style=" float: right;" id="logout-btn">Log Out</button>
            {{else}}
                <a href="http://localhost:8080/login"><button>Log In</button></a>
                <a href="http://localhost:8080/register"><button>Register</button></a>
            {{/if}}
        </div>
    </div>
    
    <h1 style="text-align: center;">Product Detail</h1>
    {{#if product}}
        <h3>{{product.code}} - {{ product.title }}</h3>
        <p id="productId">{{product._id}}</p>
        <p><strong>Precio:</strong> {{product.price }}</p>
        <p><strong>Categoria:</strong> {{ product.category }}</p>
        <p><strong>Status:</strong> {{ product.status }}</p>
        <p><strong>Stock:</strong> {{ product.stock }}</p>
        <p><strong>Descripción:</strong> {{ product.description }}</p>
        {{#if product.thumnails.length}}
            <h2>Imágenes del producto</h2>
            <ul>
                {{#each product.thumnails}}
                <li>
                    <img src="{{ this }}" alt="{{ product.name }}" width="300">
                </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No hay imágenes disponibles</p>
        {{/if}}
  {{else}}
    <p>El producto no fue encontrado.</p>
  {{/if}}
  <button id="btnAddToCart">Agrgar al carrito</button>
  <button id="ViewCart">Ver Mi Carrito</button>
  <a href="http://localhost:8080/products"><button>Ver todos los productos</button></a>
</div>
<script src="../js/logout.js"></script>
<script src="../js/productDetail.js"></script>