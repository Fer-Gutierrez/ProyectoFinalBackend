<div style="display: flex; flex-direction: column;">
  <div style="display: flex; flex-direction:row; gap: .3rem; align-items: center;">
        <button id="ViewCart">Ver Mi Carrito</button>
        <a href="http://localhost:8080/chat"><button>Ir al Chat</button></a>
        <a href="http://localhost:8080/"><button>Ir al Home</button></a>
        <a href="http://localhost:8080/products"><button>Buscar Productos</button></a>
        <div style="margin-left: auto;">
            {{#if user}}
                <p>{{user.role}}: {{user.name}} / {{user.email}}</p>
                <button style=" float: right;" id="logout-btn">Log Out</button>
            {{else}}
                <a href="http://localhost:8080/login"><button>Log In</button></a>
                <a href="http://localhost:8080/register"><button>Register</button></a>
            {{/if}}
        </div>
    </div>
  <div style="display: flex; flex-direction: column;">
  <h1 style="margin: 10px auto;">Agregar un producto</h1>
  <form id="addProductForm" action="">
    <label for="code">Codigo:</label>
    <input type="text" id="code" name="code">
    <label for="title">Titulo:</label>
    <input type="text" id="title" name="title">
    <label for="description">Descripción:</label>
    <input type="text" id="description" name="description">
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price">
    <label for="status">Estado:</label>
    <input type="checkbox" id="status" name="status">
    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock">
    <label for="category">Categoría:</label>
    <input type="text" id="category" name="category">
    <label for="category">Imagenes:</label>
    <input type="file" id="thumbnails" multiple="true" name="thumbnails" accept="image/png, image/jpeg">
    <button type="submit">Agregar</button>
  </form>
  <br>
  <h1 style="margin: 10px auto;">Eliminar un producto</h1>
  <form id="deleteProductForm">
    <label for="id">Id:</label>
    <input type="number" id="id" name="id">
    <button type="submit">Eliminar</button>
  </form>
  <br>
  <h1 style="margin: 10px auto;">Listado de Productos Real Time</h1>
  <div id="productsContenedor">
  </div>
</div>
<script src="js/logout.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>